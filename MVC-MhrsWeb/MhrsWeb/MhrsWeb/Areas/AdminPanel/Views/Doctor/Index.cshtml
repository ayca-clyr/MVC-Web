@model IEnumerable<MhrsWeb.Doktor>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Yeni Ekle +", "Create")
</p>
<table class="table">
    <tr>
        <th>Doktor Adı</th>
        <th>Uzmanlık Adı</th>
        <th>Cinsiyet</th>
        <th>Çalıştığı Hastane</th>
        <th>İşlemler</th>
    </tr>

    @{
        if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Klinik.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cinsiyet.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hastane.Name)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { Id = item.Id, SeoText = MhrsWeb.Helper.LinkExtension.SeoReplace(item.FullName) }) |
            @Html.ActionLink("Sil", "Delete", new { Id = item.Id })
        </td>
    </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">
                    Kayıtlı Doktor Bulunamadı..
                </td>
            </tr>
        }

    }
</table>

