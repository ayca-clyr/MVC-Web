@model MhrsWeb.Kullanici

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <title>Kaydol</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h4>Kayıt Ol</h4>

                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("TC*", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TC, new { htmlAttributes = new { @class = "form-control", required = "required", type = "number", placeholder = "(11 Karakter)" } })
                    @Html.ValidationMessageFor(model => model.TC)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Ad*", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Ad Giriniz" } })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Soyad*", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Soyad Giriniz" } })
                    @Html.ValidationMessageFor(model => model.Surname)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Doğum Tarihi*", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "(Örn: 30.05.1990)" } })
                    @Html.ValidationMessageFor(model => model.DateOfBirth)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("E-Mail*", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", required = "required", type = "email", placeholder = "(Örn: example@example.com)" } })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Şifre*", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="password" class="form-control" id="sifre" name="sifre" placeholder="Şifre Girin" required />
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Şifre(Tekrar)*", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="password" class="form-control" id="sifreTekrar" name="sifreTekrar" placeholder="Şifre Girin(Tekrar)" required />
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Cinsiyet*", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="radio" name="cinsiyetId" value="1" checked>Erkek
                    <input type="radio" name="cinsiyetId" value="2">Kadın
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Geri Dön", "Index")&nbsp;
                    <input type="submit" value="Kaydol" class="btn btn-success" />
                </div>
            </div>
        </div>
    }




    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


</body>
</html>
