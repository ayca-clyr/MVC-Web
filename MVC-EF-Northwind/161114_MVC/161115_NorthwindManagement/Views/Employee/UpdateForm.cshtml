@model Employee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Çalışan Güncelle</title>

    <link href="~/Css/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <header class="well">
            <h1>Northwind Inc.</h1>
        </header>
        <section>
            <div class="row">
                <nav class="col-xs-12 col-sm-4 col-md-3">
                    <a href="/Employee" class="list-group-item">Çalışanlar</a>
                    <a href="/Product" class="list-group-item">Ürünler</a>
                    <a href="/Category" class="list-group-item">Kategoriler</a>
                </nav>
                <div class="col-xs-12 col-sm-8 col-md-9" style="min-height:600px">
                    @* Değişiklik Yapılacak Kısım*@
                    
                    <h2 class="text-center" style="background-color:green; color:white">Çalışan Güncelle</h2>

                    <form action="/Employee/Update" method="post" class="col-md-8 col-md-offset-2">

                        <input type="hidden" name="id" value="@Model.EmployeeID" />

                        <div class="form-group">
                            <label>Ad :</label>
                            <input class="form-control" type="text" name="firstName" value="@Model.FirstName"/>
                        </div>

                        <div class="form-group">
                            <label>Soyad :</label>
                            <input class="form-control" type="text" name="lastName" value="@Model.LastName" />
                        </div>

                        <div class="form-group">
                            <label>Ünvan :</label>
                            <input class="form-control" type="text" name="title" value="@Model.Title"/>
                        </div>

                        <div class="form-group">
                            <label>Şehir :</label>
                            <input class="form-control" type="text" name="city" value="@Model.City" />
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                            <a href="/Employee/Index" class="btn btn-warning">İptal</a>
                        </div>

                    </form>


                </div>

            </div>
        </section>
        <footer class="well text-center">&copy; 2016 Northwind Inc. Management Panel</footer>
    </div>



    <script src="~/Css/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Css/Scripts/bootstrap.js"></script>

</body>
</html>
