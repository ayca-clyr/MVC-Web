@model Entities.Social
@{
    ViewBag.Title = "SocialUpdate";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<form action="@Url.Action("SocialUpdate","Social",new { Id = Model.Id })" method="post" enctype="multipart/form-data" ">
    <span>Sosyal Ağ Güncelle</span>

    <div class="x_panel" style="margin-top:15px;">
        <input type="text" id="facebook" class="form-control" name="Facebook" placeholder="Facebook Adresi Giriniz.." value="@Model.Facebook">
        <input type="text" id="instagram" class="form-control" name="Instagram" placeholder="Instagram Adresi Giriniz.." value="@Model.Instagram">
        <input type="text" id="linkedin" class="form-control" name="Linkedin" placeholder="Linkedin Adresi Giriniz.." value="@Model.Linkedin">
        <input type="text" id="github" class="form-control" name="GitHub" placeholder="GitHub Adresi Giriniz.." value="@Model.GitHub">
    </div>

    <div class="form-group">
        <a href="@Url.Action("Index","Home")" class="btn btn-default pull-right">IPTAL</a>
        <input type="submit" value="Güncelle" class="btn btn-primary pull-right" />
    </div>
</form>
